isbn = {2041-210X},
issn = {2041210X},
journal = {Methods in Ecology and Evolution},
keywords = {Coefficient of variation,Dispersion,Effect size,Meta-regression,Parasite behaviour manipulation,Sex chromosomes,Systematic reviews,Variability},
number = {2},
pages = {143--152},
title = {{Meta-analysis of variation: Ecological and evolutionary applications and beyond}},
