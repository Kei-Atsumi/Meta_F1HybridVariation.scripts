journal = {Journal of Evolutionary Biology},
keywords = {Assortative mating,Behaviourial hybrid dyfunction,Bimodality,Chorthippus,Female preferences,Hybrid zone,Mosaic,Sexual selection},
number = {4},
pages = {1248--1256},
pmid = {16780525},
title = {{Assortative preferences and discrimination by females against hybrid male song in the grasshoppers Chorthippus brunneus and {\textless}i{\textgreater}Chorthippus jacobsi{\textless}/i{\textgreater} (Orthoptera: Acrididae)}},
volume = {19},
